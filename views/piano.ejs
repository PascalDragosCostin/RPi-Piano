<div class="row">
  <div class="dcol-sm-12 col-xs-12 col-md-12 col-lg-12 d-flex justify-content-center">
    <select id="theme">
      <option value="0">Default theme</option>
      <option value="1">Classic theme</option>
      <option value="2">Blue theme</option>
      <option value="3">Colorful theme</option>
    </select>
    <select id="isNote">
      <option value="0">Chords</option>
      <option value="1">Notes</option>
    </select>
  </div>
</div>

<br />
<br />

