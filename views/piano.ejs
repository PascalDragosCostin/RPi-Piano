<div class="row">
  <div class="dcol-sm-12 col-xs-12 col-md-12 col-lg-12 text-center">
    <% var i;
    var label = ["First", "Second", "Third", "Fourth", "Fifth", "Sixth", "Seventh"]
    %>
    <% for(i=1; i <8; ++i ) {%> 
      <button class="dcol-sm-1 col-xs-1 col-md-1 col-lg-1" id="<%=i %> " type="button"><%=label[i - 1]%></button>
    <% } %> 
  </div>
</div>
